{{yield}}

{{#if addNewStory}}
<h1>New Story</h1>
<div>
  <form>
    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author"}}
    </div>

    <div class="form-group">
      <label for="title">Title</label>
      {{input value=title id="title"}}
    </div>

    <div class="form-group">
      <label for="content">Content</label>
      {{input value=content id="content"}}
    </div>

    <div class="form-group">
      <label for="image">image</label>
      {{input value=image id="image"}}
    </div>

    <button {{action 'saveStory1'}}>Save</button>
  </form>
</div>
{{else}}
  <button {{action 'storyFormShow'}}>New Story</button>
{{/if}}
